generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Ingredient {
  id       Int     @id @default(autoincrement())
  name     String
  unit     String
  amount   Float
  Recipe   Recipe? @relation(fields: [recipeId], references: [id])
  recipeId Int?
}

model Direction {
  id       Int     @id @default(autoincrement())
  order    Int
  text     String
  Recipe   Recipe? @relation(fields: [recipeId], references: [id])
  recipeId Int?
}

model Recipe {
  id          Int          @id @default(autoincrement())
  createdAt   DateTime     @default(now())
  title       String       @unique
  slug        String
  intro       String
  image       String
  category    String
  tags        String
  ingredients Ingredient[]
  directions  Direction[]
}
